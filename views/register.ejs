<form method="post">
	<h2 class="form-signin-heading">회원가입</h2><hr/>
  		<div class="form-group row">
			<label for ="type" class="col-sm-2 col-form-label">회원종류</label>

  			<label class="form-check-label">
    				<input class="form-check-input" type="radio" name="type" id="type" value="donator" checked>후원자&nbsp;&nbsp;
  			</label>
		
  			<label class="form-check-label">
    				<input class="form-check-input" type="radio" name="type" id="type" value="creator">창작자&nbsp;&nbsp;
  			</label>
  			<label class="form-check-label">
    				<input class="form-check-input" type="radio" name="type" id="type" value="investor" >투자자&nbsp;&nbsp;
  			</label>
		</div>
  		<div class="form-group row">
    			<label for="name"  class="col-sm-2 col-form-label">이름</label>
			<div class="col-sm-4">
    				<input type="text" name ="name" class="form-control" id="name" required autofocus>
			</div>
  		</div>
 		<div class="form-group row">
    			<label for="id" class="col-sm-2 col-form-label">사용자 아이디</label>
			<div class="col-sm-4">
    				<input type="text" name ="uid" class="form-control" id="id"  required >
    				<a onclick ="checkID()" class="btn btn-default" ><b>아이디 중복 검사</b></a>
			</div>
  		</div>
  		<div class="form-group row">
    			<label for="password" class="col-sm-2 col-form-label">비밀번호</label>
			<div class="col-sm-6">
    				<input type="password" name="pass1" class="form-control" id="password" required>
			</div>
  		</div>
  		<div class="form-group row">
    			<label for="password" class="col-sm-2 col-form-label">비밀번호 확인</label>
			<div class="col-sm-6">
    				<input type="password" name="pass2" class="form-control" id="password" required>
			</div>
  		</div>
  		<div class="form-group row">
    			<label for="dob" class="col-sm-2 col-form-label">생년월일</label>
			<div class="col-sm-2">
    				<input type="date" name ="dob" class="form-control" id="dob"  required>
			</div>
  		</div>
   		<div class="form-group row">
    			<label for="email" class="col-sm-2 col-form-label">이메일 주소</label>	
			<div class="col-sm-6">
    				<input type="email" name ="email" class="form-control" id="email"  required>
			</div>
  		</div>
  		<div class="form-group row">
    			<label for="tel" class="col-sm-2 col-form-label">핸드폰 번호</label>	
			<div class="col-sm-6">
    				<input type="text" name ="phone" class="form-control" id="tel" placeholder="-없이 입력" required>
			</div>
  		</div>
		<div class="form-group row">
    			<label for="tel" class="col-sm-2 col-form-label">주소</label>	
			<div class="col-sm-6">
    				<input type="text" name ="add" class="form-control" id="add"  required>
			</div>
  		</div>
 
  		<button type="submit" class="btn btn-primary btn-lg">회원가입</button>
</form>

