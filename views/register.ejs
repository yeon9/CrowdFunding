</script>
        <script>
        function checkID()
        {
                var userid = $('#id').val();
                
                if(userid =='')
                        alert('아이디를 입력해주세요');
                else
                {
                        $.get('/reg/checkuserid?id='+userid,function(data,err)
                        {
                                if(data == 'true')
                                {
                                        $('#id').val('');
                                        alert('아이디 중복. 다른 아이디를 입력해주세요');
                                }
                                else
                                {
                                        alert('사용가능한 아이디');
                                }
                        });
                }
        };

        </script>

