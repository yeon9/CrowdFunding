<div style="width:66%;; margin-left:15%" align="center">

<div class="container" style="width:100%;" align="center">
<br/>

<div>
    <form method="post" action="/admin/fee">

	<span class="col-sm-2"><h4>월별 조회</h4></span>
	<div class="form-group">
    <div class="col-sm-2"> 
        <select class="form-control" name="year" id="year">
        <option>-----------</option>
	    <option>2016</option>
	    <option>2017</option>
	    <option>2018</option>
	    <option>2019</option>
	    <option>2020</option>
	    <option>2021</option>
	    <option>2022</option>
    	</select>
    </div>

	<span class="col-sm-1"><h4>년</h4></span>

    <div class="col-sm-1">    
        <select class="form-control" name="month" id="month">
            <option>---</option>
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
            <option>11</option>
            <option>12</option>
        </select>
    </div> 
    <span class="col-sm-1"><h4>월</h4></span>
	<span><input type="submit" class="col-sm-1 btn btn-default" value="조회"></span>
    </div>
    </form>

</div> 
</div>


<br/><br/>

<% data.forEach(function(item, index){
	total += item.fee;
});
	if(year == 0)
		year='';
	else
		year=year+' 년';
	if(month == 0)
		month ='';
	else
		month=month+' 월';
	%>
<h3 align="right" style="color:#DC143C;"><b><%=year%>  <%=month%>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;총 &nbsp;합 : <%= total %> </b></h3>
<br/>
<br/>

    <table class="table table-hover">
      <tr class="active" align="center">
	<td>입금날짜</td>
	<td>투자자</td>
	<td>프로젝트 이름</td>
	<td>창작자</td>
	<td>중개 수수료</td>
      </tr>
<% data.forEach(function(item,index){ %>
      <tr align="center">
	<td><%=item.date_fee %></td>
	<td><%=item.investor %></td>
	<td><%=item.project_title%></td>
	<td><%=item.creator %></td>
	<td><%=item.fee%></td>
      </tr>
<% }); %>
    </table>
