<!DOCTYPE html>
<html lang="ko">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="description" content="">
<meta name="author" content="">
<title>마이 페이지</title>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/latest/css/bootstrap.min.css" rel="stylesheet">
<style type="text/css">
* { font-family: NanumGothic, 'Malgun Gothic'; }
body { padding-top: 50px; width:1300px; }
.sub-header {
  padding-bottom: 10px;
  border-bottom: 1px solid #eee;
}
.navbar-fixed-top { border: 0; }
.sidebar { display: none; }
@media (min-width: 768px) {
  .sidebar {
    position: fixed;
    top: 51px;
    bottom: 0;
    left: 0;
    z-index: 1000;
    display: block;
    padding: 20px;
    overflow-x: hidden;
    overflow-y: auto;
    background-color: #f5f5f5;
    border-right: 1px solid #eee;
  }
}
.nav-sidebar {
  margin-right: -21px;
  margin-bottom: 20px;
  margin-left: -20px;
}
.nav-sidebar > li > a {
  padding-right: 20px;
  padding-left: 20px;
}
.nav-sidebar > .active > a,
.nav-sidebar > .active > a:hover,
.nav-sidebar > .active > a:focus {
  color: #fff;
  background-color: #428bca;
}
.main { padding: 20px; }
@media (min-width: 768px) {
  .main {
    padding-right: 40px;
    padding-left: 40px;
  }
}
.main .page-header { margin-top: 0; }
.placeholders {
  margin-bottom: 30px;
  text-align: center;
}
.placeholders h4 { margin-bottom: 0; }
.placeholder { margin-bottom: 20px; }
.placeholder img {
  display: inline-block;
  border-radius: 50%;
}
</style>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/latest/js/bootstrap.min.js"></script>
<script src="//getbootstrap.com/assets/js/docs.min.js"></script>
</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/"><b>CrowdFunding</b></a>
    </div>
    	<div class="collapse navbar-collapse">
      	  <ul class="nav navbar-nav navbar-right pull-right">
            <li><a href="/logout"><b>로그아웃</b></a></li>
            <li><a href="/mypage"><b>마이페이지 </b></a></li>
          </ul>
    	</div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
      <ul class="nav nav-sidebar">
<% if(type == 'investor'){  %>
        <li><a href="/mypage/mediation"><h4>투자 의향 요청 내역</h4></a></li>
        <li class="active"><a href="/mypage/edit"><h4>개인정보 변경</h4></a></li>
<% }
	else if(type == 'creator'){  %>
        <li><a href="/mypage/myproject"><h4>마이프로젝트</h4></a></li>
        <li><a href="/mypage/apply"><h4>프로젝트 페이지 개설 신청 내역</h4></a></li>
        <li><a href="/mypage/mediation"><h4>투자 의향 요청 내역</h4></a></li>        
	  <li class="active"><a href="/mypage/edit"><h4>개인정보 변경</h4></a></li>
<% } 
	else if(type == 'donator'){ %>
        <li><a href="/mypage/donationlist"><h4>펀딩 내역</h4></a></li>
        <li><a href="/mypage/cart"><h4>찜 목록</h4></a></li>
        <li><a href="/mypage/QnA"><h4>QnA 내역</h4></a></li>
        <li><a href="/mypage/review"><h4>후기</h4></a></li>
        <li class="active"><a href="/mypage/edit"><h4>개인정보 변경</h4></a></li>
<% } %>
      </ul>
    </div>
 <br/><br/>
    <div style="margin-left:30%; width:50%;"class="col-sm-8 col-sm-offset-3 col-md-10 col-md-offset-2 main" >
      <h2 class="page-header">개인정보 변경</h2>
	<br/>
      <a href="/mypage/edit/password"><input type="button" class="btn btn-primary page-header pull-right" name="editpass" id="editpass" value="비밀번호 변경" /></a>
	<br/>
	<form action="/mypage/edit" method="POST" align="center">
<% data.forEach(function(item, index){  %>
	<div class="form-group">
    	    <label for="name" class="col-sm-2 control-label" >이름</label>
    	    <div class="col-sm-4">
      	        <input type="text" class="form-control unabled" id="name" name="name" value="<%=item.name %>" readOnly>
    	    </div>
	</div>
	<br/><br/><br/>
	<div class="form-group">
    	    <label for="birth" class="col-sm-2 control-label" >생년월일</label>
    	    <div class="col-sm-4">
      	        <input type="date" class="form-control unabled" id="birth" name="birth" value="<%=item.birth%>" readOnly>
    	    </div>
	</div>
	<br/><br/><br/>
	<div class="form-group">
    	    <label for="email" class="col-sm-2 control-label" >이메일</label>
    	    <div class="col-sm-4">
      	        <input type="email" class="form-control unabled" id="email" name="email" value="<%=item.email %>">
    	    </div>
	</div>
	<br/><br/><br/>

	<div class="form-group">
          <label for="phone" class="col-sm-2 control-label" >연락처</label>
          <div class="col-sm-4">
              <input type="text" class="form-control unabled" id="phone" name="phone" value="<%=item.phone %>">
          </div>
	</div>
	<br/><br/><br/>

      <div class="form-group">
          <label for="address" class="col-sm-2 control-label" >주소</label>
          <div class="col-sm-4">
              <input type="text" class="form-control unabled" id="address" name="address" value="<%=item.address %>">
          </div>
    </div>
    <br/><br/><br/>

<%  });  %>
    
    <div class="form-group">
	<input type="submit" class="btn btn-default" value="수정"/>
    </div>

  </form>
  </div>


    </div> 
  </div> <!--row -->
</div> <!-- container-fluid -->


    <br/><br/><br/>
    <br/><br/><br/>



</body>
</html>